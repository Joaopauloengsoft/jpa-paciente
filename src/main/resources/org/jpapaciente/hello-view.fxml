                        <TextField fx:id="txtNome" promptText="Nome completo" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="CPF:" textFill="WHITE" GridPane.rowIndex="2">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Label>
                        <TextField fx:id="txtCpf" promptText="000.000.000-00" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Data de Nascimento:" textFill="WHITE" GridPane.rowIndex="3">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Label>
                        <DatePicker fx:id="dpDataNascimento" prefWidth="1000.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Telefone:" textFill="WHITE" GridPane.rowIndex="4">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Label>
                        <TextField fx:id="txtTelefone" promptText="(00) 00000-0000" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnCadastrar" mnemonicParsing="false" onAction="#onCadastrar" prefHeight="25.0" prefWidth="81.0" text="Cadastrar">
                     <font>
                        <Font name="System Bold Italic" size="12.0" />
                     </font></Button>
                        <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#onBuscar" text="Buscar">
                     <font>
                        <Font name="System Bold Italic" size="12.0" />
                     </font></Button>
                        <Button fx:id="btnAtualizar" mnemonicParsing="false" onAction="#onAtualizar" text="Atualizar">
                     <font>
                        <Font name="System Bold Italic" size="12.0" />
                     </font></Button>
                        <Button fx:id="btnExcluir" mnemonicParsing="false" onAction="#onExcluir" text="Excluir">
                     <font>
                        <Font name="System Bold Italic" size="12.0" />
                     </font></Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tabelaPacientes" prefHeight="694.0" prefWidth="852.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colNome" prefWidth="200.0" text="Nome" />
                <TableColumn fx:id="colCpf" prefWidth="100.0" text="CPF" />
