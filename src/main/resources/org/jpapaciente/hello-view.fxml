                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
                <GridPane hgap="10.0" prefHeight="245.0" prefWidth="867.0" style="-fx-alignment: #FFFAFA;" vgap="10.0">
